<div class="container pt-3">
  <h3><%= viewTitle %></h3>

  <form action="/admin" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="<%= user._id %>">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Full Name" value="<%= user.name %>">
        <div class="text-danger">
            <%= user.nameError %></div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="<%= user.email %>">
        <div class="text-danger">
            <%= user.emailError %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Password</label>
            <input type="text" class="form-control" name="password" placeholder="Mobile" value="<%= user.password %>">
        </div>
        <div class="form-group col-md-6">
            <label>Teacher</label>
            <input type="checkbox" name="isTeacher" value=true  >Is Teacher<br>
          </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/admin/admin-user"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>

