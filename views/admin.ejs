<div class="container pt-3">
  <h3><%= viewTitle %></h3>

  <form action="/admin" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="<%= user._id %>" required>
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Full Name" value="<%= user.name %>">
        <div class="text-danger">
            <%= user.nameError %></div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="<%= user.email %>" required>
        <div class="text-danger">
            <%= user.emailError %></div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Password</label>
            <input type="text" class="form-control" name="password" placeholder="Mobile" value="<%= user.password %> " required> 
        </div>
        <div class="form-group col-md-6">

          <label>Teacher</label>
            <select class="custom-select text-capitalize" name="isTeacher" required>
              <option selected="">Current : <%= user.isTeacher %></option>
              <option value="true">True</option>
              <option value="false">False</option>
            </select>
       
          
          </div>

          
          </div>
    </div>
    <div class="form-group ml-5">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/admin/admin-user"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>

