<div class="sidenav">
  <img class="logo" src="/img/logo.png" alt="logo">
  <a href="/admin" class="sidenav-item1">
    <h4>Welcome</h4>
  </a>
  <a href="/admin/admin-user" class="sidenav-item2" style="background-color: rgb(190, 190, 250)">
    <h4>User List</h4>
  </a>
  
  <a href="/admin/profile" class="sidenav-item3">
    <h4>Profile</h4>
  </a>



  <button type="button" href="/admin/logout" class="btn btn-secondary btn-sm ml-3 mt-3"><i
      class="fas fa-sign-out-alt mr-2"></i>Logout</button>
</div>

<div class="main-nav">
  
  
  <h3 class="my-3"><a class="btn btn-secondary" href="/admin"><i class="fa fa-plus"></i> Create New</a> User List</h3>
  
<div class="table-responsive">
  <table class="table table-striped table-sm adminUserTable">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>isTeacher</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      
      <% list.forEach(function(list){ %>
      
        <tr>
            <td><%=list.name %></td>
            <td><%=list.email %></td>
            <td><%=list.password %></td>
            <td><%=list.isTeacher %></td>
            <td>
                <a href="/admin/<%= list._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a href="/admin/delete/<%= list._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i   class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
     <% }); %>
    </tbody>
</table>
</div>





</div>